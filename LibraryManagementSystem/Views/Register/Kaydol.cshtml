<!-- body starts -->
<body>
    <!-- section -->
    <section class="register">
        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <div class="logo">
                        <a href="#">@*<span class="fa fa-graduation-cap" aria-hidden="true"></span>*@</a>
                    </div>
                    <h1>Kitap Havuzunu Keşfedin</h1>
                    <p>
                        Farklı kategori ve konu içeriğindeki binlerce kitaba erişmek için sen de aramıza katıl...
                    </p>
                    <div class="content3">
                        <ul>
                            <li><a class="" href="/ShowCase/Index">Keşfet</a></li>
                            <li><a class="read" href="/Login/GirisYap">Sisteme Giriş</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <h2>Kayıt Formu</h2>
                    <div class="register-form">
                        <form action="#" method="post">
                            <div class="fields-grid">
                                <div class="styled-input agile-styled-input-top">
                                    <input type="text" name="AD" required="">
                                    <label>Ad</label>
                                    <span></span>
                                </div>
                                <div class="styled-input agile-styled-input-top">
                                    <input type="text" name="SOYAD" required="">
                                    <label>Soyad</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    <input type="email" name="MAIL" required="">
                                    <label>Mail Adresi</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    <input type="text" name="KULLANICIADI" required="">
                                    <label>Kullanıcı Adı</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    <input type="password" name="SIFRE" required="">
                                    <label>Şifre</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    <input type="tel" name="TELEFON" required="">
                                    <label>Telefon</label>
                                    <span></span>
                                </div>
                                <div class="styled-input agile-styled-input-top">
                                    <select id="#" required="">
                                        <option value="">Okul Seçiniz*</option>
                                        <option value="">Muğla Sıtkı Koçman Üniversitesi</option>
                                        <option value="">Ege Üniversitesi</option>
                                        <option value="">Boğaziçi Üniversitesi</option>
                                        <option value="">İstanbul Teknik Üniversitesi</option>
                                        <option value="">Orta Doğu Teknik Üniversitesi</option>
                                        <option value="">Galatasaray Üniversitesi</option>
                                        <option value="">Marmara Üniversitesi</option>
                                    </select>
                                    <span></span>
                                </div>
                                <div class="clear"> </div>
                                <label class="checkbox"><input type="checkbox" name="checkbox" checked><i>Kabul Ediyorum</i><br /><a href="#">Kullanım Koşullarını Okudum </a></label>
                            </div>
                            <input type="submit" value="Kaydol">
                        </form>
                    </div>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
