
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/web/img/favicon.png">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 260px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #800000;
            overflow-x: hidden;
            padding-top: 16px;
            text-decoration: none;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 14px;
                color: #ffffff;
                display: block;
            }

                .sidebar a:hover {
                    color: #FFD700;
                }

        .main {
            margin-left: 260px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/Istatistik/Index"><i class="glyphicon glyphicon-home"></i> &nbsp; Ana Sayfa</a>
        <a href="/Kategori/Index"><i class="glyphicon glyphicon-list"></i> &nbsp; Kategoriler</a>
        <a href="/Kitap/Index"><i class="glyphicon glyphicon-book"></i> &nbsp; Kitaplar</a>
        <a href="/Yazar/Index"><i class="glyphicon glyphicon-pencil"></i> &nbsp; Yazarlar</a>
        <a href="/Uye/Index"><i class="glyphicon glyphicon-user"></i> &nbsp; Üyeler</a>
        <a href="/Personel/Index"><i class="glyphicon glyphicon-tower"></i> &nbsp; Personeller</a>
        @if (User.IsInRole("A"))  // kullanıcı yetki değeri A ise ilgili sayfaları görüntüler aksi halde belirtilen sayfaları göremez
        {
            <a href="/Emanet/EmanetVer"><i class="glyphicon glyphicon-circle-arrow-right"></i> &nbsp; Kitap Emanet İşlemleri</a>
            <a href="/Emanet/Index"><i class="glyphicon glyphicon-circle-arrow-left"></i> &nbsp; Kitap Teslim İşlemleri</a>
        }
        <a href="/Istatistik/Index"><i class="glyphicon glyphicon-stats"></i> &nbsp; İstatistikler</a>
        <a href="/Duyuru/Index"><i class="glyphicon glyphicon-volume-up"></i> &nbsp; Duyurular</a>
        <a href="/Islem/Index"><i class="glyphicon glyphicon-tasks"></i> &nbsp; İşlemler</a>
        <a href="/Istatistik/HavaDurumu"><i class="glyphicon glyphicon-cloud"></i> &nbsp; Hava Durumu Raporu</a>
        <a href="/Istatistik/HavaKart"><i class="glyphicon glyphicon-list-alt"></i> &nbsp; Hava Durumu Kartları</a>
        <a href="/Istatistik/Galeri"><i class="glyphicon glyphicon-picture"></i> &nbsp; Galeri</a>
        <a href="/Istatistik/LinqKart"><i class="glyphicon glyphicon-list-alt"></i> &nbsp; LINQ Kartlar</a>
        <a href="/ShowCase/Index"><i class="glyphicon glyphicon-dashboard"></i> &nbsp; Keşfet</a>
        <a href="/Grafik/Index"><i class="glyphicon glyphicon-signal"></i> &nbsp; Google Chartlar</a>
        <a href="/Ayarlar/Index"><i class="glyphicon glyphicon-cog"></i> &nbsp; Ayarlar</a>
        <a href="/Panel/LogOut"><i class="glyphicon glyphicon-log-out"></i> &nbsp; Çıkış</a>
    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>
