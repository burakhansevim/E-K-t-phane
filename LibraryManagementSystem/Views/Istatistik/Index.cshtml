
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- fontawesome icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />


<link href="~/web2/css/bootstrap.css" rel="stylesheet" />
<link href="~/web2/css/style.css" rel="stylesheet" />
<link href="~/web2/css/jqvmap.css" rel="stylesheet" />
<script src="~/web2/js/Chart1.js"></script>
<script src="~/web2/js/jquery.min.js"></script>
<script src="~/web2/js/jquery.vmap.js"></script>
<script src="~/web2/js/jquery.vmap.sampledata.js"></script>
<script src="~/web2/js/jquery.vmap.world.js"></script>
<script>
    $(document).ready(function (c) {
        $('.alert-close6').on('click', function (c) {
            $('.world-map').fadeOut('slow', function (c) {
                $('.world-map').remove();
            });
        });
    });
</script>

<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery('#vmap').vectorMap({
            map: 'world_en',
            backgroundColor: '#333333',
            color: '#ffffff',
            hoverOpacity: 0.7,
            selectedColor: '#666666',
            enableZoom: true,
            showTooltip: true,
            values: sample_data,
            scaleColors: ['#C8EEFF', '#006491'],
            normalizeFunction: 'polynomial'
        });
    });
</script>


<div class="list_of_members">
    <div class="sales">
        <div class="icon">
            <i class="fa-regular fa-credit-card fa-2xl" style="color: #FFFFFF;"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.viewValue4 ₺</h3>
            <p>Toplam Kasa Tutarı</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="new-users">
        <div class="icon">
            <i class="fa-solid fa-users fa-2xl" style="color: #ffffff;"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.viewValue1</h3>
            <p>Toplam Üye</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="orders">
        <div class="icon">
            <i class="fa-solid fa-book fa-2xl" style="color: #ffffff;"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.viewValue2</h3>
            <p>Toplam Kitap</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="visitors">
        <div class="icon">
            <i class="fa-solid fa-book-open-reader fa-flip-horizontal fa-2xl" style="color: #ffffff;"></i>
            @*<i class="visit"></i>*@
        </div>
        <div class="icon-text">
            <h3>@ViewBag.viewValue3</h3>
            <p>Emanet Kitap</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
</div>


<div class="total-sales">
    <div class="user-trends">
        @*<div class="alert-close7"> </div>*@

        <canvas id="bar" height="340" width="780"></canvas>
        <script>

            var barChartData = {
                labels: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz"],
                datasets: [
                    {
                        fillColor: "rgba(255, 137, 167, 0.78)",
                        strokeColor: "rgba(220,220,220,1)",
                        data: [65, 59, 90, 81, 56, 55, 40]
                    },
                    {
                        fillColor: "rgba(140, 145, 255, 0.69)",
                        strokeColor: "rgba(151,187,205,1)",
                        data: [28, 48, 40, 19, 96, 27, 100]
                    }
                ]

            }

            var myLine = new Chart(document.getElementById("bar").getContext("2d")).Bar(barChartData);

        </script>
    </div>
    <div class="to-do">
        @*<div class="alert-close5"> </div>*@
        <h3>Yapılacaklar Listesi</h3>
        <div class="checkbox-form">
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Yayıneviyle İletişim</label>
            </div>
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Emanet Kitap Kontrolü</label>
            </div>
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Kasa İşlemleri Kontrolü</label>
            </div>
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Haftasonu Mesaisi</label>
            </div>
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Yeni Kitapların Sisteme Dahili</label>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>


<div class="total-world">
    <div class="world-map">
        @*<div class="alert-close6"> </div>*@
        <h3>Dünya Çapında Okuma Oranı</h3>
        <p><span class="color1"></span>40%<span class="color2"></span>12%<span class="color3"></span>11%<span class="color4"></span>10%<span class="color5"></span>18%</p>
        <div class="clearfix"></div>
        <div id="vmap" style="width: 600px; height: 400px;"></div>
    </div>
    <div class="site-report">
        @*<div class="alert-close3"> </div>*@
        <h3>Sistem Raporları</h3>
        <div class="skills-top">
            <h5>Üye Memnuniyeti</h5>
            <h4>92%</h4>
            <div class="clearfix"></div>
            <div class="skills">
                <div class="skill" style="width:92%"></div>
            </div>
        </div>
        <div class="skills-top">
            <h5>Güvenli Alışveriş</h5>
            <h4>98%</h4>
            <div class="clearfix"></div>
            <div class="skills">
                <div class="skill1" style="width:98% "></div>
            </div>
        </div>
        <div class="skills-top">
            <h5>Haftalık Geri Bildirimler</h5>
            <h4>78%</h4>
            <div class="clearfix"></div>
            <div class="skills">
                <div class="skill2" style="width:78%"></div>
            </div>
        </div>
        <p>Üyelerimizin memnuniyet oranı, alışveriş güvenliği ve haftalık olarak yansıyan geri dönüşler hakkında verilerimiz</p>
    </div>
    <div class="clearfix"></div>
</div>
